{
    "name": "pugx/bus-form-bundle",
    "type": "symfony-bundle",
    "description": "Automatic form for SimpleBus or Messenger",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Massimiliano Arione",
            "email": "garakkio@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "symfony/form": "^6.4 || ^7.1",
        "symfony/framework-bundle": "^6.4 || ^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.3",
        "simple-bus/message-bus": "^6.3",
        "symfony/messenger": "^6.4 || ^7.1"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "PUGX\\BusFormBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PUGX\\BusFormBundle\\Tests\\": "tests"
        }
    }
}
